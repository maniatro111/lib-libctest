From 7c0029f4832cb0e7ad82bba700d0135b27799c99 Mon Sep 17 00:00:00 2001
From: Florin Postolache <florin.postolache80@gmail.com>
Date: Tue, 25 Oct 2022 11:04:57 +0300
Subject: [PATCH] Modify strtod_long source to work with uktest

Signed-off-by: Florin Postolache <florin.postolache80@gmail.com>
---
 src/functional/strtod_long.c | 9 +++------
 1 file changed, 3 insertions(+), 6 deletions(-)

diff --git a/src/functional/strtod_long.c b/src/functional/strtod_long.c
index fa5ac17..696c15d 100644
--- a/src/functional/strtod_long.c
+++ b/src/functional/strtod_long.c
@@ -1,9 +1,9 @@
 #include <stdio.h>
 #include <stdlib.h>
 #include <string.h>
-#include "test.h"
+#include <uk/test.h>
 
-int main(void)
+UK_TESTCASE(uk_libc_testsuite, strtod_long_tests)
 {
 	double x, want = .1111111111111111111111;
 	char buf[40000];
@@ -11,9 +11,6 @@ int main(void)
 	memset(buf, '1', sizeof buf);
 	buf[0] = '.';
 	buf[sizeof buf - 1] = 0;
-
-	if ((x=strtod(buf, 0)) != want)
-		t_error("strtod(.11[...]1) got %a want %a\n", x, want);
-	return t_status;
+	UK_TEST_ASSERT(((x=strtod(buf, 0)) == want));
 }
 
